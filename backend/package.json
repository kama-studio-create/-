{
  "name": "mythic-warriors-backend",
  "version": "1.0.0",
  "description": "Backend API for Mythic Warriors card game",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:debug": "nodemon --inspect server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "lint": "eslint . --ext .js --ignore-path .gitignore",
    "lint:fix": "eslint . --ext .js --ignore-path .gitignore --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "seed": "node scripts/seedDatabase.js",
    "migrate": "node scripts/runMigrations.js",
    "backup": "node scripts/backup.js",
    "league:run": "node scripts/runLeague.js",
    "build": "echo 'No build step required for Node.js'",
    "docker:build": "docker build -t mythic-warriors-api .",
    "docker:run": "docker run -p 3000:3000 --env-file .env mythic-warriors-api"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "telegram",
    "card-game",
    "api",
    "websocket"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "socket.io": "^4.7.2",
    "node-telegram-bot-api": "^0.63.0",
    "node-cron": "^3.0.2",
    "crypto": "^1.0.1",
    "axios": "^1.5.0",
    "joi": "^17.9.2",
    "winston": "^3.10.0",
    "redis": "^4.6.7",
    "bull": "^4.11.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "eslint": "^8.48.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "prettier": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "@types/node": "^20.5.9"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**",
      "!src/scripts/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mythic-warriors-backend.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/mythic-warriors-backend/issues"
  },
  "homepage": "https://github.com/yourusername/mythic-warriors-backend#readme"
}