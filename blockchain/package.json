{
  "name": "mythic-warriors-blockchain",
  "version": "1.0.0",
  "description": "Smart contracts for Mythic Warriors card game",
  "main": "hardhat.config.js",
  "scripts": {
    "compile": "hardhat compile",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "console": "hardhat console",
    "test": "hardhat test",
    "test:unit": "hardhat test test/unit/**/*.test.js",
    "test:integration": "hardhat test test/integration/**/*.test.js",
    "test:security": "hardhat test test/security/**/*.test.js",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "test:watch": "hardhat test --watch",
    "deploy:localhost": "hardhat run scripts/deploy/deploy-all.js --network localhost",
    "deploy:testnet": "hardhat run scripts/deploy/deploy-all.js --network bscTestnet",
    "deploy:mainnet": "hardhat run scripts/deploy/deploy-all.js --network bsc",
    "verify:testnet": "hardhat run scripts/verification/verify-all.js --network bscTestnet",
    "verify:mainnet": "hardhat run scripts/verification/verify-all.js --network bsc",
    "size": "hardhat size-contracts",
    "flatten": "hardhat flatten",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol' 'test/**/*.js' 'scripts/**/*.js'",
    "analyze": "slither .",
    "mythril": "myth analyze contracts/core/MythicToken.sol",
    "docs": "hardhat docgen",
    "upgrade:prepare": "hardhat run scripts/utilities/prepare-upgrade.js",
    "upgrade:deploy": "hardhat run scripts/utilities/deploy-upgrade.js"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart-contracts",
    "defi",
    "nft",
    "game",
    "blockchain"
  ],
  "author": "Mythic Warriors Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@openzeppelin/hardhat-upgrades": "^1.28.0",
    "hardhat": "^2.17.0",
    "hardhat-gas-reporter": "^1.0.9",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-abi-exporter": "^2.10.1",
    "solidity-coverage": "^0.8.4",
    "hardhat-docgen": "^1.3.0",
    "@typechain/hardhat": "^6.1.6",
    "@typechain/ethers-v5": "^10.2.1",
    "typechain": "^8.3.1",
    "solhint": "^3.6.2",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "chai": "^4.3.7",
    "ethereum-waffle": "^4.0.10",
    "ethers": "^5.7.2"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.3",
    "@chainlink/contracts": "^0.6.1",
    "dotenv": "^16.3.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
